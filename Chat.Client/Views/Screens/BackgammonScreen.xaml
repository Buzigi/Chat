<UserControl x:Class="Chat.UI.Views.Screens.BackgammonScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Chat.UI.Views.Screens"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="29*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="81*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="22*"/>
            <RowDefinition Height="44*"/>
            <RowDefinition Height="79*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="117*"/>
            <RowDefinition Height="64*"/>
            <RowDefinition Height="6*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="65*"/>
            <ColumnDefinition Width="61*"/>
            <ColumnDefinition Width="60*"/>
            <ColumnDefinition Width="61*"/>
            <ColumnDefinition Width="61*"/>
            <ColumnDefinition Width="60*"/>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="60*"/>
            <ColumnDefinition Width="61*"/>
            <ColumnDefinition Width="61*"/>
            <ColumnDefinition Width="61*"/>
            <ColumnDefinition Width="60*"/>
            <ColumnDefinition Width="61*"/>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition Width="300*"/>
        </Grid.ColumnDefinitions>
        <Image Source="/Images/Backgammon_board.jpg" Grid.Column="0" Stretch="Fill" Grid.ColumnSpan="14" Grid.RowSpan="14"/>
        <Separator Grid.Column="14" Grid.Row="0" Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Grid.RowSpan="14"/>
        <TextBlock Text="{Binding PlayerA}" Grid.Column="15" Grid.Row="1" FontFamily="Buxton Sketch" HorizontalAlignment="Center" FontSize="30"/>
        <TextBlock Text="Vs." Grid.Column="15" Grid.Row="2" FontFamily="Buxton Sketch" HorizontalAlignment="Center" FontSize="30" Margin="123,0"/>
        <TextBlock Text="{Binding PlayerB}" Grid.Column="15" Grid.Row="3" FontFamily="Buxton Sketch" HorizontalAlignment="Center" FontSize="30"/>
        <Button Content="Roll the dice" Grid.Column="15" Grid.Row="6" FontFamily="Buxton Sketch" HorizontalAlignment="Center" FontSize="30" Width="262" Margin="10,0.231,10,21.707" Grid.RowSpan="2" />
        <TextBlock Text="Chat:" Grid.Column="15" Grid.Row="8" FontFamily="Buxton Sketch" HorizontalAlignment="Center" FontSize="30"/>
        <ContentControl Name="chat_cc" Grid.Column="15" Grid.Row="9" Grid.RowSpan="7"/>
        
        <!--#region culomns-->

        
        

        <!--#endregion culomns-->
    </Grid>
</UserControl>
