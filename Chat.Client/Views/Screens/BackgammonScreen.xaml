<UserControl x:Class="Chat.Client.Views.Screens.BackgammonScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Chat.Client.Views.Screens"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="29*"/>
            <RowDefinition Height="36*"/>
            <RowDefinition Height="38*"/>
            <RowDefinition Height="41*"/>
            <RowDefinition Height="82*"/>
            <RowDefinition Height="49*"/>
            <RowDefinition Height="41*"/>
            <RowDefinition Height="66*"/>
            <RowDefinition Height="80*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="118*"/>
            <RowDefinition Height="64*"/>
            <RowDefinition Height="6*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="65*"/>
            <ColumnDefinition Width="61*"/>
            <ColumnDefinition Width="60*"/>
            <ColumnDefinition Width="61*"/>
            <ColumnDefinition Width="61*"/>
            <ColumnDefinition Width="60*"/>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="60*"/>
            <ColumnDefinition Width="61*"/>
            <ColumnDefinition Width="61*"/>
            <ColumnDefinition Width="61*"/>
            <ColumnDefinition Width="60*"/>
            <ColumnDefinition Width="61*"/>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition Width="300*"/>
        </Grid.ColumnDefinitions>
        <Image Source="/Images/Backgammon_board.jpg" Grid.Column="0" Stretch="Fill" Grid.ColumnSpan="14" Grid.RowSpan="13"/>
        <Separator Grid.Column="14" Grid.Row="0" Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Grid.RowSpan="13"/>
        <TextBlock Text="{Binding PlayerA}" Grid.Column="15" Grid.Row="1" FontFamily="Buxton Sketch" HorizontalAlignment="Center" FontSize="30"/>
        <TextBlock Text="Vs." Grid.Column="15" Grid.Row="2" FontFamily="Buxton Sketch" HorizontalAlignment="Center" FontSize="30"/>
        <TextBlock Text="{Binding PlayerB}" Grid.Column="15" Grid.Row="3" FontFamily="Buxton Sketch" HorizontalAlignment="Center" FontSize="30"/>
        <Button Content="Roll the dice" Grid.Column="15" Grid.Row="5" FontFamily="Buxton Sketch" HorizontalAlignment="Center" FontSize="30"/>
    </Grid>
</UserControl>
