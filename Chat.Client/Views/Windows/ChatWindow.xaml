<Window x:Class="Chat.UI.UserControls.ChatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chat.UI.UserControls"
        xmlns:controls="clr-namespace:Chat.UI.UserControls"
        mc:Ignorable="d" Height="500" Width="500"
        Closed="Window_Closed">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Images/Chat_Background.png"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="450*"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="270*"/>
            <ColumnDefinition Width="10*"/>
        </Grid.ColumnDefinitions>
        <ContentControl Name="chatControl_cc" Grid.Column="1" Grid.Row="1"/>
    </Grid>
</Window>
